{
  "name": "htmlsignage",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:admin": "vite --config vite.config.admin.js",
    "dev:player": "vite --config vite.config.player.js",
    "preview:admin": "vite preview --config vite.config.admin.js --host",
    "preview:player": "vite preview --config vite.config.player.js --host",
    "build:admin": "vite build --config vite.config.admin.js",
    "build:player": "vite build --config vite.config.player.js",
    "test": "npm run build:admin && npm run build:player && npm run test:frontend && npm run test:perf && composer test",
    "test:frontend": "vitest run",
    "test:backend": "composer test",
    "test:watch": "vitest",
    "test:perf": "node scripts/check-core-web-vitals.mjs",
    "lint": "eslint webroot/admin/js --ext .js"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@testing-library/dom": "^9.3.2",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "jsdom": "^24.0.0",
    "vite": "^5.3.2",
    "vitest": "^1.6.0"
  }
}
